body{font-family:roboto mono,sans-serif;font-size:16px;line-height:1.6;font-weight:400;color:#2c2c2c}h1,h2,h3,h4,h5,h6{font-family:roboto mono,sans-serif;font-weight:700}a{text-decoration:none;color:rgba(44,44,44,.5)}a:hover{color:#2c2c2c}.heart{color:red}#wrap{max-width:750px;margin:0 auto;position:relative}#masthead{display:flex;justify-content:space-between;align-items:center;padding:2rem 0}#masthead .site-title{font-size:32px;font-size:2rem}#masthead .site-title a{color:#2c2c2c}#masthead .site-desc{font-weight:400}#masthead .site-navigation a{margin-left:10px}#masthead .site-navigation .cta{border:2px solid #1c9963;color:#1c9963;border-radius:4px;padding:5px 15px;font-weight:700}#masthead .site-navigation .cta:hover{color:#fff;background-color:#1c9963}.site-content--pages .article__title{font-size:initial}.site-content--pages .article__title:before{content:'#';margin-right:10px;color:rgba(44,44,44,.5)}.article{margin:3rem 0}.article:first-child{margin-top:0}.article__title{font-size:24px;font-size:1.5rem;margin-bottom:10px}.article__title a{color:#2c2c2c}.article__intro{color:rgba(44,44,44,.5)}.article__content p{margin:1rem 0}.article__content ol{list-style:numeric;padding-left:30px}.article__content ol li{margin-bottom:10px}.article__content strong{font-weight:700}.article__content em{font-style:italic}.article__content code,.article__content pre{font-family:roboto mono,monospace;background-color:rgba(44,44,44,.05);padding:0 10px 2px;letter-spacing:1px;border-radius:4px}.article__content a{color:#1c9963}.article__content a:hover{background-color:#1c9963;color:#fff}.article__content a:after{content:url(data:image/svg+xml;base64,);margin-left:5px;position:relative;top:-2px}.article__content h1:before,.article__content h2:before{color:rgba(44,44,44,.5);margin-right:5px}.article__content h1:before{content:'#'}.article__content h2:before{content:'##'}#colophon{padding:2rem 0;margin-top:4rem;font-family:roboto mono,sans-serif;border-top:1px solid rgba(44,44,44,.5)}#colophon p{margin:0}#colophon .main-domain{color:#1c9963}